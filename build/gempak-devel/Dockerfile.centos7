FROM centos:7
MAINTAINER Daryl Herzmann <akrherz@iastate.edu>

USER root
RUN useradd gempak
RUN yum update yum -y
RUN yum groupinstall "Development tools" -y
RUN yum install -y \
  libxslt \
  git \
  rpm-build \
  openmotif-devel \
  gcc \
  gcc-c++ \
  gcc-gfortran \
  libX11-devel \
  libXt-devel \
  libXext-devel \
  libXp-devel \
  libXft-devel \
  libXtst-devel \
  xorg-x11-xbitmaps \
  flex \
  byacc \
  *fonts-ISO8859-* \
  python-devel

# Bootstrap install extlibs...
RUN rpm -ivh https://www.unidata.ucar.edu/downloads/gempak/latest/gempak-extlibs-7.14.0.1-1.el7.centos.x86_64.rpm
